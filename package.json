{
  "private": true,
  "packageManager": "pnpm@7.12.2",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "license": "ISC",
  "author": "Hg",
  "scripts": {
    "cz": "czg",
    "dev": "pnpm -C play dev",
    "build": "gulp -f build/gulpfile.ts",
    "dev:docs": "pnpm -C docs dev",
    "build:docs": "pnpm -C docs  build",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "vue": "^3.2.36"
  },
  "dependencies": {
    "@h-material/components": "workspace:^1.0.0",
    "@h-material/theme-chalk": "workspace:^1.0.0",
    "@h-material/utils": "workspace:^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@h-material/eslint-config": "workspace:^0.0.1",
    "@types/gulp": "^4.0.10",
    "@types/gulp-autoprefixer": "^0.0.33",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-sass": "^5.0.0",
    "@types/sass": "^1.43.1",
    "commitizen": "^4.2.6",
    "cz-git": "^1.4.1",
    "czg": "^1.4.1",
    "eslint": "^8.29.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "sass": "^1.56.2",
    "sucrase": "^3.29.0",
    "typescript": "^4.9.4",
    "unplugin-vue-define-options": "^1.0.0",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1",
    "vue": "^3.2.36"
  },
  "engines": {
    "node": ">= 16"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
